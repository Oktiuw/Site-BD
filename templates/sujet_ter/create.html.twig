{% extends 'base.html.twig' %}

{% set title = "Ajouter un sujet TER" %}

{% block title %} {{ title }} {% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/form.css') }}" rel="stylesheet">
{% endblock %}


{% block body %}
    <div class="form">
        <div class="info">
            <h1> {{ title }} </h1>
        </div>
        {{ form_start(form, {'attr': {'class': 'flex-column formulaire'}}) }}
        <p>Titre </p> {{ form_widget(form.titreTer)}}<br>
        <p>Description </p> {{ form_widget(form.descTer)}}<br>
        <p>Niveau </p> {{ form_widget(form.niveau)}}<br>
        {{ form_widget(form) }}
        <input type="submit" class="btn btn-success" value="Ajouter" />
        {{ form_end(form) }}
    </div>

{% endblock %}