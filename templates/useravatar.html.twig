{% endblock %}
<a href="{{ path('app_utilisateur') }}" class="lien-updateavatar">
{% if user.avatar is null %}
    <img src="{{ asset('img/avatar_defaut.png') }}" alt="Avatar par dÃ©faut"  class="avatar">
{% else %}
    <img src="{{ asset('img/usersAvatar/'~user.avatar) }}" alt="Avatar de l'utilisateur" class="avatar">
{% endif %}
</a>
{% block javascripts %}
    <script>
        let ahref=document.querySelector('a.lien-updateavatar');
        let avatarimg=document.querySelector('img.avatar');
        let compteur=0;
        ahref.addEventListener("mouseover",()=>
        {
            avatarimg.style.filter='brightness(50%)';
        });
        ahref.addEventListener("mouseout",()=>
        {
            avatarimg.style.filter='brightness(100%)';
        });
    </script>
{% endblock %}